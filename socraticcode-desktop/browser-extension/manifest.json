{
  "manifest_version": 3,
  "name": "CoDei - AI Learning Conscience",
  "version": "1.0.0",
  "description": "Universal AI conscience that promotes learning over copying in all coding environments",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "clipboardRead",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://cursor.sh/*",
    "https://replit.com/*",
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://codepen.io/*",
    "https://jsfiddle.net/*",
    "https://codesandbox.io/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://cursor.sh/*",
        "https://replit.com/*",
        "https://github.com/*",
        "https://stackoverflow.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CoDei Learning Conscience",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
